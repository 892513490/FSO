<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - 友情在线</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-v4.min.css" />
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-vue.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://unpkg.com/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap-v4.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="https://unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap-vue.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/vue/vue.min.js"></script>
        <script src="~/lib/vue/vue-resource.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/polyfill.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap-vue.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.3.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
        <script src="https://cdn.bootcss.com/vue/2.5.17/vue.min.js"
                asp-fallback-src="~/lib/vue/vue.min.js"
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/vue-resource"
                asp-fallback-src="~/lib/vue/vue-resource.min.js"
                crossorigin="anonymous">
        </script>
        <script src="https://unpkg.com/babel-polyfill@latest/dist/polyfill.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/polyfill.min.js"
                crossorigin="anonymous">
        </script>
        <script src="https://unpkg.com/bootstrap-vue@latest/dist/bootstrap-vue.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap-vue.js"
                crossorigin="anonymous">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <style>
        .navbar {
            background-color: #2b2b2b;
        }
    </style>
</head>
<body>
    <div id="__layout">
        <nav class="navbar navbar-dark bd-navbar navbar-light sticky-top navbar-expand-md">
            <button type="button" aria-label="Toggle navigation" aria-controls="bd-main-nav" aria-expanded="false" class="navbar-toggler">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">友情在线</a>
            <div id="bd-main-nav" class="justify-content-between navbar-collapse collapse" style="display: none;">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">主页</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Video" asp-action="Index">视频专区</a></li>
                    <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">联系方式</a></li>
                </ul>
            </div>
        </nav>

        <partial name="_CookieConsentPartial" />

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2020 - 友情在线&nbsp;<a href="http://www.beian.miit.gov.cn" target="_blank">粤ICP备18132526号-1</a></p>
            </footer>
        </div>
    </div>

    

    @RenderSection("Scripts", required: false)

    <style>
        body {
            margin: 0;
            padding: 0;
            padding: 0;
            padding: 0;
        }

        .body-content {
            padding-left: 0;
            padding-right: 0;
        }

        .container {
            max-width: 100%;
        }

        footer {
            text-align: center;
        }
    </style>

    <script>
        $(document).ready(function () {
            $(".navbar-toggler").click(function () {
                $("#bd-main-nav").toggle();
            });
        });
    </script>
</body>
</html>
