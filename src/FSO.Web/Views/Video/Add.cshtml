@model FSO.Models.VideoInfo

@{
    ViewData["Title"] = "上传视频";
}

<style>
    #app {
        margin:50px;
    }

    .modal-footer {
        display:none;
    }
</style>

<div class="row" id="app">
    <div class="col-md-4">
        <form asp-action="Add" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">标题</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">上传者</label>
                <input asp-for="Creator" class="form-control" />
                <span asp-validation-for="Creator" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">备注</label>
                <textarea asp-for="Remark" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Remark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">图片文件地址</label>
                <input asp-for="ImgUrl" class="form-control" multiple placeholder="请填写网络地址..."/>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b-form-file v-model="file" name="fileImg" :state="Boolean(file)" placeholder="请选择图片文件..."></b-form-file>
            </div>
            <div class="form-group">
                <label class="control-label">视频文件地址</label>
                <input asp-for="Url" class="form-control" multiple placeholder="请填写网络地址..."/>
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <b-form-file v-model="file" name="fileVideo" :state="Boolean(file)" placeholder="请选择视频文件..."></b-form-file>
            </div>
            <div class="form-group">
                <b-button type="submit" :variant="'primary'" v-b-modal.modal-center>提交</b-button>
                <b-modal id="modal-center" centered title="温馨提示：">
                    <p style="padding-top:15px;">
                        <img src="/images/loading.gif" style="width:40px;margin-right:10px;" />
                        <span>正在提交表单,请稍后...</span>
                    </p>
                </b-modal>
            </div>
        </form>
    </div>
</div>

<script>
    new Vue({
        el:"#app",
        data() {
            return {
                file: null,
                file2: null
            }
        }
    });
</script>

